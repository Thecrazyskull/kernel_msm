/include/ "msm8226-moto-common.dtsi"
/include/ "dsi-panel-mot-cmi-720p-video.dtsi"

/ {
	model = "Motorola QC-MSM8226 Falcon";
	compatible = "qcom,msm8226-falcon",
		     "qcom,msm8226-moto",
		     "qcom,msm8226";

	gpio_keys {
		compatible = "gpio-keys";
		input-name = "gpio-keys";

		lid-sw {
			label = "lid-switch";
			gpios = <&msmgpio 51 0x1>;
			linux,input-type = <5>;
			linux,code = <0>;
			gpio-key,wakeup;
			debounce-interval = <15>;
		};
	};
};

&i2c_2 {
	lis3dh@19 {
		compatible = "stm,lis3dh";
		reg = <0x19>;
		vdd-supply = <&pm8226_l19>;
		gpios = <&msmgpio 63 0>; /* IRQ */
		stm,poll-interval = <200>;
		stm,min-interval = <1>;
		stm,g-range = <8>;
		stm,threshold = <0x20>;
		stm,duration = <0x5>;
	};
};

&i2c_5 {
	cyttsp3_i2c@3b {
		status = "disabled";
	};
};

&mot_cmi_720p_vid_v0 {
	vddio_disp-supply = <&vddio_disp_vreg>;
	lcdbias-supply = <&tps65132>;
};
